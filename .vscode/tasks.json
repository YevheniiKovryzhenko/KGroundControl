{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure Debug (Linux)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build/Debug",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "linux": {},
            "problemMatcher": ["$gcc"],
            "options": { "cwd": "${workspaceFolder}" }
        },
        {
            "label": "Build Debug (Linux)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build/Debug",
                "--parallel"
            ],
            "linux": {},
            "problemMatcher": ["$gcc"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": true }
        },
        {
            "label": "Configure and Build Debug (Linux)",
            "dependsOn": ["Configure Debug (Linux)", "Build Debug (Linux)"],
            "dependsOrder": "sequence",
            "linux": {},
            "group": "build"
        },

        {
            "label": "Configure Release (Linux)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build/Release",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "linux": {},
            "problemMatcher": ["$gcc"],
            "options": { "cwd": "${workspaceFolder}" }
        },
        {
            "label": "Build Release (Linux)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build/Release",
                "--parallel"
            ],
            "linux": {},
            "problemMatcher": ["$gcc"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build"
        },
        {
            "label": "Configure and Build Release (Linux)",
            "dependsOn": ["Configure Release (Linux)", "Build Release (Linux)"],
            "dependsOrder": "sequence",
            "linux": {},
            "group": "build"
        },

        {
            "label": "Configure MinSizeRel (Linux)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build/MinSizeRel",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=MinSizeRel"
            ],
            "linux": {},
            "problemMatcher": ["$gcc"],
            "options": { "cwd": "${workspaceFolder}" }
        },
        {
            "label": "Build MinSizeRel (Linux)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build/MinSizeRel",
                "--parallel"
            ],
            "linux": {},
            "problemMatcher": ["$gcc"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build"
        },
        {
            "label": "Configure and Build MinSizeRel (Linux)",
            "dependsOn": ["Configure MinSizeRel (Linux)", "Build MinSizeRel (Linux)"],
            "dependsOrder": "sequence",
            "linux": {},
            "group": "build"
        },
        {
            "type": "cmake",
            "label": "CMake: Configure Debug",
            "command": "configure",
            "options": {
                "cwd": "${workspaceFolder}/build/Debug"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "cmake",
            "label": "CMake: Configure Release",
            "command": "configure",
            "options": {
                "cwd": "${workspaceFolder}/build/Release"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "cmake",
            "label": "CMake: Configure MinSizeRel",
            "command": "configure",
            "options": {
                "cwd": "${workspaceFolder}/build/MinSizeRel"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "cmake",
            "label": "CMake: Build",
            "command": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "type": "cmake",
            "label": "CMake: Clean",
            "command": "clean",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "type": "cmake",
            "label": "CMake: Clean Rebuild",
            "command": "cleanRebuild",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "type": "cmake",
            "label": "CMake: Build Debug",
            "command": "build",
            "options": {
                "cwd": "${workspaceFolder}/build/Debug"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "type": "cmake",
            "label": "CMake: Build Release",
            "command": "build",
            "options": {
                "cwd": "${workspaceFolder}/build/Release"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "type": "cmake",
            "label": "CMake: Build MinSizeRel",
            "command": "build",
            "options": {
                "cwd": "${workspaceFolder}/build/MinSizeRel"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "CMake: Configure and Build MinSizeRel",
            "dependsOn": [
                "CMake: Configure MinSizeRel",
                "CMake: Build MinSizeRel"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "CMake: Configure and Build Debug",
            "dependsOn": [
                "CMake: Configure Debug",
                "CMake: Build Debug"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "CMake: Configure and Build Release",
            "dependsOn": [
                "CMake: Configure Release",
                "CMake: Build Release"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Deploy Qt Libraries (Windows)",
            "type": "shell",
            "command": "windeployqt",
            "args": [
                "--no-translations",
                "--no-system-d3d-compiler",
                "--no-opengl-sw",
                "${workspaceFolder}/build/${input:buildType}/KGroundControl.exe"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build and Deploy Qt (Windows)",
            "dependsOn": [
                "CMake: Build ${input:buildType}",
                "Deploy Qt Libraries (Windows)"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "buildType",
            "description": "Select build type",
            "default": "Debug",
            "type": "pickString",
            "options": [
                "Debug",
                "Release",
                "MinSizeRel"
            ]
        }
    ]
}