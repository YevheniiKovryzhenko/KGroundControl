{
    "version": "0.2.0",
    "configurations": [
        // Windows
        {
            "name": "Run: Debug (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Configure+Build (Preset) - Debug (Windows)"
        },
        {
            "name": "Run: MinSizeRel (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Configure+Build (Preset) - MinSizeRel (Windows)"
        },
        {
            "name": "Run: Release (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Configure+Build (Preset) - Release (Windows)"
        },

        // Linux
        {
            "name": "Run: Debug (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "program": "${workspaceFolder}/build/Debug/bin/KGroundControl",
            "cwd": "${workspaceFolder}/build/Debug/bin",
            "externalConsole": false,
            "preLaunchTask": "Configure+Build (Preset) - Debug (Linux)"
        },
        {
            "name": "Run: MinSizeRel (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "program": "${workspaceFolder}/build/MinSizeRel/bin/KGroundControl",
            "cwd": "${workspaceFolder}/build/MinSizeRel/bin",
            "externalConsole": false,
            "preLaunchTask": "Configure+Build (Preset) - MinSizeRel (Linux)"
        },
        {
            "name": "Run: Release (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "program": "${workspaceFolder}/build/Release/bin/KGroundControl",
            "cwd": "${workspaceFolder}/build/Release/bin",
            "externalConsole": false,
            "preLaunchTask": "Configure+Build (Preset) - Release (Linux)"
        }
    ]
}